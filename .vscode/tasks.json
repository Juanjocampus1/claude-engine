{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-G",
                "Visual Studio 17 2022",
                "-A",
                "x64"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Configure CMake"],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "dependsOn": ["Configure CMake"],
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Run Setup",
            "type": "shell",
            "command": "${workspaceFolder}/setup.ps1",
            "problemMatcher": []
        }
    ]
}
